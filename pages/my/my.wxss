page{
  height: 100%;
}
.bg_img{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
/* 获取头像 */
.info{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center; 
}
.info button{
  margin-top: 90rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-top: 90rpx;
}
.userinfo-nickname {
  color: #aaa;
}
.vipInfo{
  width: 50%;
  height: 2.5rem;
  font-size: 35rpx;
  margin-left: 200px;
}

/* 菜单 */
.main{
  margin-top: 10rpx;
  width: 100%;
  height: 666rpx;
  background: white;
}

/* 菜单栏 */
.menu_item{
  width: 100%;
  height: 3.5rem;
  line-height: 3.5rem;
  border-bottom: solid 3rpx gray;
}
.item_image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-left: 15rpx;
}
.item_text{
  vertical-align: middle;
  margin-left: 15rpx;
}