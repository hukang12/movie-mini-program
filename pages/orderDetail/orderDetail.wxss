/* pages/orderDetail/orderDetail.wxss */
page{
  height:100%
}
.body{
  width: 100%;
  height: 100%;
}
.top{
  width: 100%;
  height: 250rpx;
  border-bottom: solid 1px gray; 
  display: flex;
  flex-direction: row;
  align-items: center;
}
.orderInfo{
  width: 90%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 30rpx;
}
.order_name{
  font-size: 35rpx;
  font-weight: bold;
}
.order_time{
  color: red;
}
.status_logo image{
  width: 180rpx;
  height: 180rpx;
  margin-right: 50rpx;
}
/* 验证码、二维码 */
.middle{
  margin-top: 15rpx;
  width: 100%;
  height: 500rpx;
  border-bottom: solid 1px gray; 
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.QR{
  width: 380rpx;
  height: 380rpx;
  
}
/* 底部 */
.bottom{
  width: 100%;
  height: 100rpx;
  /* //border-bottom: solid 1px gray;  */
  border-bottom: solid 1px gray; 
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  
}
.bottom text{
  margin-left: 30rpx;
  color: grey;
  
}
/* 删除订单 */
button{
  margin-top: 30rpx;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 30rpx;
  border: solid 1px gray;
  color: gray;
}