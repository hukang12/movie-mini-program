.body{
  width: 700rpx;
  height: 280rpx;
  background-color: white;
  border-radius: 10px;
  margin: auto; 
  box-shadow: 2px 2px 3px 3px gray
}
.top{
  width: 100%;
  height: 1.5rem;
  line-height: 1.5rem;
  
  border-bottom: solid 1px gray;
}
.top text{
  color: gray;
  font-size: 26rpx;
  margin-left: 13rpx;
}
.mid{
  width: 100%;
  height: 185rpx;
  display: flex;
  flex-direction: row;
  border-bottom: solid 1px gray;
}
.mid image{
  width: 108rpx;
  height: 160rpx;
  border-radius: 10px;
  margin: 13rpx;
}
.info{
  display: flex;
  flex-direction: column;
  margin: 15rpx;
}
.m_name{
  font-size: 35rpx;
  font-weight: bold;
}
.infotext{
  color: gray;
  margin-top: 5rpx;
}
.bottom{
  width: 94%;
  height: 1.5rem;
  line-height: 1.5rem;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 15rpx;
  font-size: 27rpx;
  color: gray;
}
