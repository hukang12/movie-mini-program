page{
  height: 100%;
}
.bg{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.bg_img{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.app_logo{
  width: 350rpx;
  height: 150rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  align-items: center;
}
.app_logo image{
  width: 100rpx;height: 100rpx; border-radius: 50%;
}
.app_logo text{
  font-size: 50rpx;
  font-weight: bold;
  color: white;
}

/* 登录表单 */
.login{
  width: 80%;
  height: 700rpx;
  background: white;
  border-radius: 30px;
  
}
.form_login{
  width: 100%;
  height: 60%;
  /* border: solid 1px red; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx
}
.input{
  width: 500rpx;
  height: 2.5rem;
  border: solid 1px gray;
  border-radius: 5px;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.input image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}
.input input{
  margin-left: 18rpx;
}
.btn_login{
  margin-top: 20rpx;
  width: 500rpx;
  background-color: orange;
  border-radius: 10px;
  color: white;
}
/* 忘记密码 注册 */
.login_bottom{
  width: 500rpx;
  height: 2rem;
  display: flex;
  margin: auto;
  flex-direction: row;
  justify-content: space-between;
}
.navi{
  color: orange;
  font-size: 33rpx;
}